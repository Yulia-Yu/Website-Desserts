mixin a(href, name)
	a(class!=attributes.class href=href)= name

mixin createMenu (idPage)
	if idPage == 0
		+a('index.html', 'Главная')(class = "selected")
		+a('index2.html', 'Рецепты')
		+a('#', 'Кулинарная школа')
		+a('#', 'Видео рецепты')
	if idPage == 1
		+a('index.html', 'Главная')
		+a('index2.html', 'Рецепты')(class = "selected")
		+a('#', 'Кулинарная школа')
		+a('#', 'Видео рецепты')
	if idPage == 2
		+a('index.html', 'Главная')
		+a('index2.html', 'Рецепты')
		+a('#', 'Кулинарная школа')
		+a('#', 'Видео рецепты')

<!DOCTYPE html>
html(lang="ru")
	head
		include HeadCode

	body
		.menu 
			.nav 
				block menu			
		
		block content